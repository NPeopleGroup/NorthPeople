			<result name="input">home.jsp
			</result>
		</action>
		<action name="LoginAction" class="com.hyd.northpj.action.LoginAction">
			<result name="success">home.jsp
			</result>
			<result name="input">home.jsp
			</result>
		</action>
		<!-- 此处需要修改 -->
		<action name="AdminLoginAction" class="com.hyd.northpj.action.AdminLoginAction">
